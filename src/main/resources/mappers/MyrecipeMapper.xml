<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zipchelin.repository.mybatis.mappers.MyrecipeMapper">
	
	<!-- 나만의 레시피 리스트 목록 조회 -->
    <select id="getListPaging" resultType="com.zipchelin.domain.community.Myrecipe">
        <![CDATA[
        select rn, myre_title, myre_date
        from (select rownum as rn, myre_title, myre_date
              from myrecipe_tbl
              where rownum <= #{pageNum} * #{amount})
        where rn > (#{pageNum} - 1) * #{amount}
        ]]>
    </select>
	
	 <!-- 게시물 총 갯수 -->
    <select id="getTotal" resultType="int">
        select count(*) from myrecipe_tbl 
    </select>
	
	
	
	
	
</mapper>